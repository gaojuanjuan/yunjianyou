<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    >

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:foreground="#BB000000"
        android:scaleType="centerCrop"
        android:src="@drawable/login_bg"/>


    <RelativeLayout
        android:id="@+id/login_rl_"
        android:layout_width="wrap_content"
        android:layout_height="115dp"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="8%">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/logo1"/>

            <ImageView
                android:layout_width="140dp"
                android:layout_height="80dp"
                android:layout_marginLeft="15dp"
                android:src="@drawable/logo_f"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:text="全网最优的线下购物平台"
            android:textColor="@color/color_light_white"
            android:textSize="16sp"/>

    </RelativeLayout>


    <LinearLayout
        android:id="@+id/login_ll_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_rl_"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/login_margin_"
            android:layout_marginRight="@dimen/login_margin_"
            android:layout_marginTop="12dp"
            android:background="@drawable/flag_bg_r180_back500"
            android:padding="2dp">


            <EditText
                android:id="@+id/phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="12dp"
                android:background="@null"
                android:drawableRight="@drawable/close_icon"
                android:hint="手机号"
                android:padding="2dp"
                android:textColorHint="@color/grey700"
                android:textSize="14sp"/>


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:layout_marginLeft="@dimen/login_margin_"
            android:layout_marginRight="@dimen/login_margin_"
            android:layout_marginTop="12dp"
            android:background="@drawable/flag_bg_r180_back500">

            <TextView
                android:id="@+id/get_smsCode_"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12dp"
                android:text="获取验证码"
                android:textColor="@color/color_light_white"
                android:textSize="16sp"/>

            <EditText
                android:id="@+id/smsCode"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="12dp"
                android:layout_marginRight="6dp"
                android:layout_toLeftOf="@id/get_smsCode_"
                android:background="@null"
                android:hint="验证码"
                android:padding="2dp"
                android:textColorHint="@color/grey700"
                android:textSize="14sp"/>


        </RelativeLayout>


        <TextView
            android:id="@+id/login_"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/login_margin_"
            android:layout_marginRight="@dimen/login_margin_"
            android:layout_marginTop="12dp"
            android:background="@drawable/flag_bg_r180_yellow"
            android:gravity="center"
            android:text="登录"
            android:textColor="@color/color_light_white"
            android:textSize="24sp"/>

        <TextView
            android:id="@+id/register_"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/login_margin_"
            android:layout_marginRight="@dimen/login_margin_"
            android:layout_marginTop="12dp"
            android:background="@drawable/flag_bg_r180_white500"
            android:gravity="center"
            android:text="注册"
            android:textColor="@color/color_light_white"
            android:textSize="24sp"/>


    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/login_ll_"
        android:layout_marginRight="58dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="使用密码登录"
        android:textColor="@color/color_light_white"
        android:textSize="16sp"/>

</android.support.percent.PercentRelativeLayout>
